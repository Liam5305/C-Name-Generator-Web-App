@{
    ViewData["Title"] = "Name Generator";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Random Name Generator</h2>
            <button id="generateNameBtn" class="btn btn-primary">Generate Name</button>
            <div id="nameResult" class="mt-3">
                <h3><span id="firstName"></span> <span id="lastName"></span></h3>
                <h2>Clan Name Generator</h2>
                <button id="generateClanBtn" class="btn btn-primary">Generate Clan Name</button>
                <div id="clanResult" class="mt-3">
                    <h3><span id="clanName"></span></h3>
                </div>
                <h2>Scottish City Generator</h2>
                <button id="generateCityBtn" class="btn btn-primary">Generate Scottish City</button>
                <div id="cityResult" class="mt-3">
                    <h3><span id="albaCityName"></span></h3>
                </div>
            </div>
        </div>
    </div>
</div>

